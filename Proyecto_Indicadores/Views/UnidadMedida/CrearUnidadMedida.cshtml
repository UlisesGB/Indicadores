@model Proyecto_Indicadores.Models.UnidadMedida

@{
    ViewBag.Title = "Crear/Editar Unidades de Medida";
    Layout = "~/Views/Shared/_IndicadoresLayout.cshtml";
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script type='text/javascript'>alert('@ViewBag.Message');</script>
    }
}

<script src="~/scripts/UnidadMedida.js"></script>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

<div id="DivCuerpo" class="form-horizontal" style="margin-left:30%">

    <h1 class="EncabezadosForms" style="text-align:left">Crear nueva unidad de Medida </h1>

    <div class="card" style="background-color: #ededed; width:60%">
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})

        <div class="card-body">

            <p class="Indicaciones">Por favor ingrese la información solicitada:</p>

            <div class="divIngresoDatos">

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IdUnidad, new { htmlAttributes = new { @class = "form-control", @id = "txtId", @style = "display:none" } })
                        @Html.ValidationMessageFor(model => model.IdUnidad, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Siglas, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Siglas, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase; width: 40%", @id = "txtSiglas", @maxlength = "3", @placeholder = "Ejemplo: USD" }  })
                        @Html.ValidationMessageFor(model => model.Siglas, "", new { @class = "text-danger" })
                    </div>

                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-6" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @style = "width:80%", @id = "txtDescripcion" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <br />
                            <input type="submit" id="btnGuardarUnidadMedida" onclick="GuardarUnidadMedidaClick();" value="Guardar Unidad de Medida" class="btn btn-primary" />
                        </div>
                    </div>

                </div>


            </div>

        </div>


    </div>


        }<!--Final de Form-->




       