@model Proyecto_Indicadores.Models.Posvalor

@{
    ViewBag.Title = "CrearPosValor";
    Layout = "~/Views/Shared/_IndicadoresLayout.cshtml";
    if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <script type='text/javascript'>alert('@ViewBag.Message');</script>
    }
}

<script src="~/scripts/PosValor.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="DivCuerpo" class="form-horizontal" style="margin-left:30%">
        <hr style="width:80%; margin-left:0%" />
        <h2>Crear/Editar PosValor</h2>
        <div class="card col-lg-12 col-md-10 col-sm-6" style="background-color: #ededed; width:80%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />

            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdPosvalor, new { htmlAttributes = new { @class = "form-control", @id = "txtId", @style = "display:none" } })
                    @Html.ValidationMessageFor(model => model.IdPosvalor, "", new { @class = "text-danger" })
                </div>

            </div>

            <div>

                <div class="form-group" style="float:left; width: 20%">
                    @Html.LabelFor(model => model.IdMetadata, "IdMetadata", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.IdMetadata, (SelectList)ViewBag.ddlMetadata, htmlAttributes: new {@id= "ddlMetadata" })
                        @Html.ValidationMessageFor(model => model.IdMetadata, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="float:left; width:30%">
                    @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control", @style = "width:90%; text-transform: uppercase", @placeholder = "Ejemplo: TYT", @maxlength = "3", @id = "txtValor" } })
                        @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @id = "txtDescripcion" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="submit" id="btnGuardarPosvalor" onclick="GuardarPosValorClick();" value="Guardar PosValor" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
